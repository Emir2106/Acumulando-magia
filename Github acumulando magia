clientes = {}

def registrar_cliente(nombre_cliente, varita_comprada):
    if nombre_cliente not in clientes:
        clientes[nombre_cliente] = []
    clientes[nombre_cliente].append(varita_comprada)

def mostrar_clientes():
for cliente, varitas in clientes.items():
if len(varitas) > 0:
print(cliente)
for varita in varitas:
 print(" -", varita)

def mostrar_opciones_varitas():
print("Opciones de varitas:")
print("1. Varita de Saúco")
print("2. Varita de Espino")
print("3. Varita de Sauce")
print("4. Varita de Acebo")

mostrar_opciones_varitas()

while True:
    nombre = input("Ingrese el nombre del cliente (o 'salir' para terminar): ")
    if nombre.lower() == "salir":
        break

    varita = input("Ingrese el número de la varita comprada: ")
    registrar_cliente(nombre, varita)

mostrar_clientes()
