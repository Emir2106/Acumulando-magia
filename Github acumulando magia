texto = input("Escribe un texto: ")
palabras = texto.split()  
conteo = palabras.count("Alexa")  

if conteo > 1:
print("Tranquilo, solo di mi nombre una vez")
elif conteo == 1:
print("Alexa está en el texto")
else:
print("Alexa no está en el texto")
