if event == "goal":
    team = input("¿Qué equipo anotó (Gryffindor o Slytherin): ")
    if team == "Gryffindor":
        gryffindor_score += 10
    elif team == "Slytherin":
        slytherin_score += 10
elif event == "snitch":
    team = input("¿Qué equipo atrapó la Snitch (Gryffindor o Slytherin): ")
    if team == "Gryffindor":
        gryffindor_score += 150
    elif team == "Slytherin":
        slytherin_score += 150
elif event == "foul":
    team = input("¿Qué equipo cometió una falta (Gryffindor o Slytherin): ")
    if team == "Gryffindor":
        gryffindor_score -= 30
    elif team == "Slytherin":
        slytherin_score -= 30
print("Gryffindor:", gryffindor_score, "puntos")
print("Slytherin:", slytherin_score, "puntos")

if gryffindor_score > slytherin_score:
print("¡Gryffindor gana!")
elif slytherin_score > gryffindor_score:
print("¡Slytherin gana!")
else:
print("¡Empate!")


